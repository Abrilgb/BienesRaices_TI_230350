div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full     "  src=`/uploads/${propiedad.imagen}` alt=`imagen de la propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-5")
        h1(class="text-xl font-bold text-green-100")= propiedad.titulo
        p(class="text-sm text-brown-200") Habitaciones:  
                                span(class="text-brown-200 font-bold")= propiedad.habitaciones
        p(class="text-sm text-green-100") WC:  
                                span(class="text-brown-200 font-bold")= propiedad.wc
        p(class="text-sm text-green-100") Precio:  
                                span(class="text-brown-200 font-bold")= propiedad.precio.nombre 
        a(href=`/propiedad/${propiedad.id}` class="bg-brown-100 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedad          

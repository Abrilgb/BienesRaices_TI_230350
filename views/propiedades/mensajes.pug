extends ../layout/admin 

block contenido
    h2(class="text-2xl font-extrabold text-center my-10 text-white")= pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-amber-700 hover-bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

    div(class="mx-auto max-w-4xl bg-white rounded-lg shadow")

        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-brown-100 border-b p-5")
                        p(class="font-bold text-amber-700") Nombre: 
                            span(class="font-normal text-brown-200")= mensaje.usuario.nombre


                        p(class="font-bold text-amber-700") Email: 
                            span(class="font-normal text-brown-200")= mensaje.usuario.email    

                        p(class="font-bold text-amber-700") Mensaje: 
                            span(class="font-normal text-brown-200")= mensaje.mensaje

                        p(class="font-bold text-amber-700") Enviado: 
                            span(class="font-normal text-brown-200")= formatearFecha( mensaje.createdAt )       
        else 
            p(class="text-center text-green-100 p-5") No hay Mensajes   